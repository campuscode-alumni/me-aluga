<h1>Proposta de locação</h1>

<%= simple_form_for([@property, @proposal]) do |f| %>

  <div class="form-group">
    <%= f.input :start_date, as: :text, label: 'Início' %>
  </div>
  <div class="form-group">
    <%= f.input :end_date, as: :text, label: 'Fim' %>
  </div>
  <div class="form-group">
    <%= f.input :total_guests, label: 'Número de hóspedes' %>
  </div>
  <div class="form-group">
    <%= f.input :purpose, label: 'Propósito' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Enviar', class: 'btn btn-primary' %>
  </div>
  

<% end %>